{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "moduleDetection": "force",
        "lib": ["ES2023"],
        "target": "ES2017",
        "outDir": "dist",
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "declaration": true,
        "noImplicitAny": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "tslib" : ["node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["src"]
}